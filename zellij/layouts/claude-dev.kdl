// Claude Code Development Layout
// ┌─────────────────────┬──────────────────────┐
// │                     │                      │
// │   Claude Code       │   Helix Editor       │
// │   (main agent)      │   (review/edit)      │
// │                     │                      │
// ├─────────────────────┴──────────────────────┤
// │   yazi (file tree) / lazygit / shell       │
// └────────────────────────────────────────────┘

layout {
    // Default for new tabs
    default_tab_template {
        pane size=1 borderless=true {
            plugin location="zellij:tab-bar"
        }
        children
        pane size=2 borderless=true {
            plugin location="zellij:status-bar"
        }
    }

    tab name="dev" focus=true {
        pane split_direction="vertical" {
            pane name="claude" size="50%" {
                command "claude"
                focus true
            }
            pane name="editor" size="50%" {
                command "hx"
                args "."
            }
        }
        pane name="files" size="30%" {
            command "yazi"
        }
    }

    tab name="git" {
        pane name="lazygit" {
            command "lazygit"
        }
    }

    tab name="shell" {
        pane name="term"
    }
}
