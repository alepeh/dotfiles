// Claude Code Development Layout
// ┌─────────────────────┬──────────────────────┐
// │                     │                      │
// │   Claude Code       │   Helix Editor       │
// │   (main agent)      │   (review/edit)      │
// │                     │                      │
// ├─────────────────────┴──────────────────────┤
// │   Shell (stacked)                          │
// └────────────────────────────────────────────┘
//
// Swap layouts: Alt+[ / Alt+] to toggle between claude-focus and editor-focus

layout {
    // Default for new tabs
    default_tab_template {
        pane size=1 borderless=true {
            plugin location="zellij:tab-bar"
        }
        children
        pane size=2 borderless=true {
            plugin location="zellij:status-bar"
        }
    }

    tab name="dev" focus=true {
        pane split_direction="vertical" {
            pane name="claude" size="50%" {
                command "claude"
                focus true
            }
            pane name="editor" size="50%" {
                command "hx"
                args "."
                start_suspended true
            }
        }
        pane stacked=true size="25%" {
            pane name="shell"
            pane name="shell2"
        }
    }

    // Swap layout: Claude focused (70/30)
    swap_tiled_layout name="claude-focus" {
        tab {
            pane split_direction="vertical" {
                pane size="70%"
                pane size="30%"
            }
            pane stacked=true size="25%" {
                children
            }
        }
    }

    // Swap layout: Editor focused (30/70)
    swap_tiled_layout name="editor-focus" {
        tab {
            pane split_direction="vertical" {
                pane size="30%"
                pane size="70%"
            }
            pane stacked=true size="25%" {
                children
            }
        }
    }

    tab name="git" {
        pane name="lazygit" {
            command "lazygit"
            start_suspended true
        }
    }

    tab name="shell" {
        pane name="term"
    }
}
