// Minimal layout - just Claude Code with stacked shells below
// ┌────────────────────────────────────────────┐
// │                                            │
// │   Claude Code                              │
// │                                            │
// ├────────────────────────────────────────────┤
// │   Shell (stacked)                          │
// └────────────────────────────────────────────┘

layout {
    default_tab_template {
        pane size=1 borderless=true {
            plugin location="zellij:tab-bar"
        }
        children
    }

    tab name="claude" focus=true {
        pane name="claude" size="70%" {
            command "claude"
            focus true
        }
        pane stacked=true size="30%" {
            pane name="shell"
        }
    }
}
