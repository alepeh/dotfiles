export DOCKER_REPO_PREFIX=alepeh

jq() {
	docker run -i --rm \
		--name jq \
		${DOCKER_REPO_PREFIX}/jq "$@"
}

t() {
		docker run -it --rm \
			--name todotxt -v ${TODOTXT_TODO_DIR}:/home/user/workspace/ \
			${DOCKER_REPO_PREFIX}/todotxt "todo.sh $@"
}

yq() {
	docker run -i --rm \
		--name yq \
		${DOCKER_REPO_PREFIX}/yq "$@"
}
